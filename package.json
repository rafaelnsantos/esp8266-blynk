{
  "private": true,
  "name": "teste-project",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --sw=false --esm=false --prerender=false --inline-css=false --dest=data --template src/template.html",
    "postbuild": "rimraf data/push-manifest.json",
    "serve": "sirv data --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest ./tests"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "data/"
    ]
  },
  "dependencies": {
    "framer-motion": "^4.1.17",
    "goober": "^2.0.37",
    "preact": "^10.3.1",
    "preact-feather": "^4.2.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.8",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "sirv-cli": "^1.0.0-next.3",
    "typescript": "^3.7.5"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  }
}
